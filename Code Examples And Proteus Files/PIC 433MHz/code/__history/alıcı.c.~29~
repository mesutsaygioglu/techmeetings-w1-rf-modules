#include <16F628A.h> 
#fuses HS,NOWDT,NOPROTECT, NOMCLR,NOLVP,NOPUT,NOCPD // Denetleyici konfigürasyon ayarlarý
#use delay (clock=20000000) 
#use rs232(baud=9600, xmit=PIN_B2, rcv=PIN_B1,stop=1, parity=N) 


 


int16 xdata[4];
 int i,a=0;
 int16 xveri;

 
 
 #INT_RDA
 void haberlesmekesmesi()
 {
 

 
 disable_interrupts(int_rda);
 
 if(getch()=='M') 
 {
   while(getch()=='M') {}
   
     for(i=0;i<4;i++) 
     
          { 
          xdata[i]=getch();
          }
 
 
     xveri=1000*xdata[3] + 100*xdata[2] + 10*xdata[1] + xdata[0]; //LCD'ye yazdýrmak için
    
     
  
     a=2; // Ana döngüde a>1 þartý için a=2,3,4 vs. olabilir.
     enable_interrupts(int_rda);
     enable_interrupts(GLOBAL);
 
 }
 
 
}

 /********* ANA PROGRAM FONKSÝYONU********/


 void main()
 {
 
 setup_timer_1(T1_DISABLED); 
 setup_timer_2(T2_DISABLED,0,1); 
 setup_CCP1(CCP_OFF);  
 
 
 




 set_tris_a(0x00); 
 set_tris_b(0x20); 



 
 while(1)
 {
 enable_interrupts(int_rda);
 
 enable_interrupts(GLOBAL);
 output_high(pin_a3); 

if(a>1) {

          
         if(xveri==1111)
           
            {
             output_high(pin_a0);
            }

         if(xveri==2222)
           
            {
             output_high(pin_a1);
            }        


         a=0;
         
        }
 

  }
  }


