     }

         for(i=0;i<5;i++) {putc(0x55);}
   
         for(i=0;i<5;i++) {putc(0x00);}
  
         for(i=0;i<5;i++) {putc(0x55);}
     
         for(i=0;i<5;i++)  {putc('M');}
    
         putc('S'); // alýcýdaki "while(getch()=='X');" ifadesi için herhangi bir boþ karakter.    
     
