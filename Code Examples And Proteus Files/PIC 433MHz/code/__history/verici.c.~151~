#include <16F628A.h> 
#fuses HS,NOWDT,NOPROTECT, NOMCLR,NOLVP,NOPUT,NOCPD // Denetleyici konfigürasyon ayarlarý
#use delay (clock=16000000) 
#use rs232(baud=1200, xmit=PIN_B2, rcv=PIN_B1,stop=1, parity=N) 
 
 #define BUTTON_1 pin_B3 // trig pini a0 olarak ayarlandý
 #define  BUTTON_2 pin_A3 // echo pini a1 olarak ayarlandý
   
 #define led pin_b0

 int i; 
 int F=1;
 int previousValueOfButton_1=0;
 
 
 void turnOff();
 
 void turnOnLED();
 
 void preambleAndSynchronization();
 
 void sendFlagData();
 
 
 int readButtonOne();
 
 
 int readButtonTwo();
 
 
 /********* ANA PROGRAM FONKSÝYONU********/

 void main ( )
 {

  output_b(0x00);//portb sýfýrlandý
  output_a(0x00);//porta sýfýrlaandý
 

 setup_timer_2(T2_DISABLED,0,1); 
 setup_CCP1(CCP_OFF); 
 set_tris_b(0x02); 
 set_tris_a(0x08); 




 while(1) 

 {
 
   int result=readButtonOne();
   if( result &&    result != previousValueOfButton_1)
   {
         previousValueOfButton_1=readButtonOne();
         preambleAndSynchronization();
         turnOnLED();
         sendFlagData();   
         putc('A') ;
   }
   
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 /////////////////BUTON1 SORGU/////////////////////////////////
    if(input(BUTTON_1) && !input(BUTTON_2) )
   
        { 
        turnOn();
 sorgu1:
         preambleAndSynchronization();
         turnOn();
         sendFlagData();   
         putc('A') ;
         
         
///////////////////////////////////////////77777//////////////////////////
         
///////////////////////ÝKÝ BUTON BASILI//////////////////////////////////////         
    
          while(input(BUTTON_1)  &&  input(BUTTON_2) ) 
          
          {
       
         preambleAndSynchronization();
     
    
         sendFlagData();    
     
         putc('F') ; 
         
          F=0;
          
          while(input(BUTTON_1)  &&  input(BUTTON_2) ) {}
          
         
          
          
          }
          
          
           ////////////////////////çýkýþ///////////////////////////7  
           
           
           
////////////////////cift basým çýkýþý//////////////////////////////////777           
        if(input(BUTTON_2) && !input(BUTTON_1) && F==0 )
       {  
         preambleAndSynchronization();
     
    
         sendFlagData(); 
     
         putc('D') ;
         
       }
         
        
        
      if(input(BUTTON_1) && !input(BUTTON_2) && F==0 )
       {  
         preambleAndSynchronization();
    
    
         sendFlagData();    
     
         putc('E') ;
         
       }
         
       
   ////////////////////////çýkýþ sonu///////////////////////////  
          
          
     
     atla1:
     
          while(input(BUTTON_1))  
          {
                  
                 if(input(BUTTON_2) ) 
                           
                            {  
                                   goto sorgu2;
                                  
                                  
                            }
                  }
         if(input(BUTTON_2)) { goto atla1;} 
         
         if(f==0)
         {        
         preambleAndSynchronization();
    
         sendFlagData();   
     
         putc('D') ;
         
         goto jump1;
         }
         
         
         
         
    

         preambleAndSynchronization();
     
    
         sendFlagData();  
     
         putc('D') ;

jump1:
    
     F=1;
     
   

        }
        
        
        
 //////////////////////////////////////////////////////////////////////////       
/////////////////////////////////////////////////////////////////////////////7        
//////////////////////////////////////////////////////////////////////////7
 

     if(input(BUTTON_2) && !input(BUTTON_1) )
   
        { turnOn();
 
          sorgu2:

    
         preambleAndSynchronization();
     
    
         sendFlagData();
           
         putc('B');
         
             

     
     
         while(input(BUTTON_1)  &&  input(BUTTON_2)) 
         
         {
         
         
         
         
         preambleAndSynchronization();
     
    
        sendFlagData();
     
         putc('F') ;          
         
         F=0;
          while(input(BUTTON_1)  &&  input(BUTTON_2) ) {}
         
         }
   ////////////////////////çýkýþ///////////////////////////7      
        if(input(BUTTON_2) && !input(BUTTON_1) && F==0 )
       {  
         preambleAndSynchronization();
     
         
    
         sendFlagData();    
     
         putc('D') ;
         
       }
         
        
        
      if(input(BUTTON_1) && !input(BUTTON_2) && F==0 )
       {  
         preambleAndSynchronization();
     
        sendFlagData();  
     
         putc('E') ;
         
       }
         
        
   ////////////////////////çýkýþ sonu///////////////////////////  
        atla2:
     
         while(input(BUTTON_2))  
         
                     {

                     
                     
                     if(input(BUTTON_1) )
                          
                                {  
                                  
                                   goto sorgu1;
                                   
                                }   
                     }
         if(input(BUTTON_1)){ goto atla1;}

         
     if(f==0) {
     
     
     
         preambleAndSynchronization();
    
         sendFlagData();
     
         putc('E') ;
         goto jump2;
     
     }

          preambleAndSynchronization();
    
         sendFlagData();
     
         putc('E') ;
         
       jump2:  
         
     F=1;     
         
       
        }
 
        
 turnOff();


 }
 
 }


void preambleAndSynchronization()
{

         {for(int i=0;i<5;i++) {putc(0x55);}}
   
         {for(int i=0;i<5;i++) {putc(0x00);}}
  
         {for(int i=0;i<5;i++) {putc(0x55);}}
         
         {for(int i=0;i<5;i++)  {putc('M');}}
}

 void turnOff()
 {
  output_low(led);
 }
 
 void turnOnLED()
 {
  output_high(led);
 }
 
 void sendFlagData()
 {
   putc('S'); 
 }
 
 int readButtonOne()
 {
    return input(BUTTON_1);
 }
 
 
  int readButtonTwo()
 {
    return input(BUTTON_2);
 }
